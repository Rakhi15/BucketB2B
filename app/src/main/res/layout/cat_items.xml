<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:id="@+id/lay_1">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/cat_item_title"
                android:text="Pepsi"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_below="@id/cat_item_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/cat_item_rate"
                android:text="â‚¹1050"
                android:textSize="20dp"/>
            <TextView
                android:layout_below="@id/cat_item_rate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/cat_item_quant"
                android:text="1 Pack(30 Units)"
                android:textSize="13dp"/>

            <Button
                android:layout_below="@id/cat_item_quant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to cart"
                android:textSize="12dp"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>
        <ImageView
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pepsi"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>
