                      android:textColor="@color/black"
                      android:textSize="20dp"
                      android:layout_column="1"
                      android:padding="3dp"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text=":"
                      android:textColor="@color/black"
                      android:textSize="20dp"
                      android:layout_column="2"
                      android:padding="3dp"
                      />
                  <TextView
                      android:id="@+id/pro_address"
