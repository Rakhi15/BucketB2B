                      android:layout_height="wrap_content"
                      android:layout_marginEnd="10dp"
                      android:text="#24-7-211/2, \n Subedari, Hanamkonda, Warnagal 506004"
                      android:textColor="@color/black"
                      android:textSize="20dp"
                      android:layout_column="3"
                      android:padding="3dp"/>

              </TableRow>
          </TableLayout>
      </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardMaxElevation="7dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/mytheme"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Your currently under waiting list, our Representative will visit your shop and verify in soon"
                android:textColor="@color/black"
                android:textSize="15dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>