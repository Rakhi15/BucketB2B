                      android:textColor="@color/black"
                      android:textSize="20dp"
                      android:layout_column="3"
                      android:padding="3dp"/>

              </TableRow>

              <TableRow>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
