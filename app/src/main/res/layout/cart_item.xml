<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="7dp"
        app:cardElevation="5dp"
        android:elevation="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/pepsi"
                android:id="@+id/img_prod"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product 123"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:id="@+id/product_name"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Items in 1 Unit Rs. 545.12"
                    android:layout_marginTop="5dp"
                    android:id="@+id/items"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity: "
                        android:textColor="@color/black"
                        />
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="-"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/quantity_minus_bg"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/btn1"
                        />
                    <EditText
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:id="@+id/quantity_ed"
                        android:textColor="@color/black"
                        android:background="@drawable/quantity_ed_bg"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:text="18"
                        android:textAlignment="center"
                        android:enabled="false"
                        />
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="+"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/quantity_plus_bg"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/btn2"
                        />

                    <Button
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_baseline_delete_outline_24"
                        android:id="@+id/delete_btn"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. 8845.45"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/stotal"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>